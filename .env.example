# Mobilicustos Environment Configuration

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mobilicustos
POSTGRES_USER=mobilicustos
POSTGRES_PASSWORD=changeme_in_production

# Neo4j (Attack Paths)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme_in_production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_LOG_LEVEL=info

# Frontend
VITE_API_URL=http://localhost:8000

# Device Management
ADB_HOST=host.docker.internal
CORELLIUM_API_KEY=
CORELLIUM_DOMAIN=https://app.corellium.com

# Tool Paths (Docker)
JADX_PATH=/opt/jadx/bin/jadx
APKTOOL_PATH=/usr/local/bin/apktool
BLUTTER_PATH=/opt/blutter/blutter.py
HERMES_DEC_PATH=/opt/hermes-dec/hbc_decompiler.py

# Frida Configuration
FRIDA_SERVER_VERSION=16.5.9
FRIDA_SCRIPTS_PATH=/app/frida-scripts

# Analysis Settings
MAX_APK_SIZE_MB=500
MAX_IPA_SIZE_MB=1000
ANALYSIS_TIMEOUT_SECONDS=3600

# Security
SECRET_KEY=changeme_generate_random_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Docker Socket Path (for container orchestration)
# Linux/Mac: /var/run/docker.sock (default)
# Windows Docker Desktop: //var/run/docker.sock or //./pipe/docker_engine
DOCKER_SOCKET_PATH=/var/run/docker.sock
